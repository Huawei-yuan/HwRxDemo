<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/rx_basic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxBasic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rx_polling_btn"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/rx_polling_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxPolling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rx_basic_btn"/>

    <Button
        android:id="@+id/rx_operator_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxOperator"
        app:layout_constraintTop_toBottomOf="@id/rx_basic_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/rx_nesting_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxNestingReq"
        app:layout_constraintTop_toBottomOf="@id/rx_basic_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rx_operator_btn"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/rx_retry_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxRetryReq"
        app:layout_constraintTop_toBottomOf="@id/rx_basic_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rx_operator_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>